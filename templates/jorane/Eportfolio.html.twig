{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Votre ePortfolio</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            margin: 20px;
            color: #333; /* Couleur de texte */
            background: linear-gradient(45deg, #E6E6FA, #FFB6C1); /* Dégradé violet et rose */
        }
        header {
            text-align: center;
            margin-bottom: 30px;
        }
        h1, h2 {
            color: #333; /* Couleur de texte */
            text-align: center;
        }
        section {
            background: linear-gradient(45deg, #fff, #f8f8f8); /* Dégradé blanc */
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            margin-bottom: 8px;
        }
        .project-item {
            margin-bottom: 15px;
        }
        .contact {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <header>
        <h1>Votre Nom</h1>
        <p>ePortfolio</p>
    </header>

    <section class="section">
        <h2>À propos de moi</h2>
        <p>Brief description about yourself and your career goals.</p>
    </section>

    <section class="section">
        <h2>Compétences</h2>
        <ul>
            <li>Compétence 1</li>
            <li>Compétence 2</li>
            <li>Compétence 3</li>
        </ul>
    </section>

    <section class="section">
        <h2>Projets</h2>
        <div class="project-item">
            <h3>Nom du Projet 1</h3>
            <p>Description du projet. Technologies utilisées, résultats obtenus, etc.</p>
        </div>
        <div class="project-item">
            <h3>Nom du Projet 2</h3>
            <p>Description du projet. Technologies utilisées, résultats obtenus, etc.</p>
        </div>
    </section>

    <section class="section contact">
        <h2>Coordonnées</h2>
        <p>Email: votre@email.com</p>
        <p>Téléphone: (123) 456-7890</p>
        <p>LinkedIn: linkedin.com/in/votreprofil</p>
        <p>Portfolio: votreportfolio.com</p>
    </section>

</body>
</html>

{% endblock %}
